<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:background="@color/branco">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:isScrollContainer="true"
        android:background="@color/branco"
        android:padding="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/roboto_negrito"
            android:text="@string/dados_de_login"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/lblEmail"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editarEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:autofillHints="name"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintEmail"
            android:textColorHint="@color/cinza"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/input"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="2dp"/>



        <TextView
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/crie_uma_nova_senha"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/editarNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintSenha"
            android:textColorHint="@color/cinza"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/input"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="2dp"/>


        <TextView
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/lblConfirmaSenhaString"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/editarConfirmarSenha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:autofillHints="phone"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintConfirmaSenhaString"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/cinza"
            android:textSize="16sp"
            android:background="@drawable/input"
            android:paddingHorizontal="15dp"/>

        <Button
            android:id="@+id/btnEditSalvarLogin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto"
            android:text="Salvar"
            android:textColor="@color/white"
            android:background="@drawable/btn_filled"/>

        <Button
            android:id="@+id/btnEditCancelarLogin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/vermelhoBack"
            android:background="@drawable/btn_outline"
            android:text="@string/btnCancelarString"/>

    </LinearLayout>
</ScrollView>