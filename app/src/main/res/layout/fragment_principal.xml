<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".PrincipalFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView

            android:layout_marginStart="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_localizacao"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/indicadorEnderecoAtualString"
            android:textSize="18sp"
            android:textColor="@color/cinzafont"
            android:fontFamily="@font/roboto"/>
        <TextView
            android:layout_marginStart="3dp"
            android:id="@+id/lbl_endereco_atual"
            android:layout_width="180dp"
            android:layout_height="25dp"

            android:ellipsize="end"
            android:singleLine="true"
            android:text="dsdsfkjsdlfsjfsdlfjsdlfjsdlfjsdldjfsdlfjdsldjsljfsdjldlj"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:background="@color/branco"
            android:src="@drawable/ic_mais_opc_endereco"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"

        >
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblLojasString"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_negrito"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:text="@string/lblOrdenarporString"
            android:textColor="@color/cinzafont"
            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"

                android:layout_marginStart="15dp"
                android:backgroundTint="@color/branco"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/lblOrderByMelhoresAvaliados"
                android:textColor="#757575" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/branco"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"

                android:text="@string/lblOrderByMenorTaxaEntrega"
                android:textColor="#757575" />
        <Button
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="48dp"

            android:text="@string/lblOrderByPopular"
            android:backgroundTint="@color/branco"
            android:textColor="#757575"

            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="48dp"

            android:text="@string/lblOrderByMelhorPreco"
            android:backgroundTint="@color/branco"
            android:textColor="#757575"
            android:layout_marginEnd="15dp"

            style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/llteste"
        android:layout_height="wrap_content">

    </LinearLayout>
    </LinearLayout>
</FrameLayout>